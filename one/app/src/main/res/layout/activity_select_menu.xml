<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="15sp">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:id="@+id/selTypeBtn"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:clickable="false"
            android:textAlignment="center"
            android:id="@+id/selTypeTv"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:id="@+id/selAview">
        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:id="@+id/selABtn"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:clickable="false"
            android:textSize="25sp"
            android:textAlignment="center"
            android:id="@+id/selATv"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:id="@+id/selBview">
        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:id="@+id/selBBtn"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:clickable="false"
            android:textSize="25sp"
            android:textAlignment="center"
            android:id="@+id/selBTv"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:id="@+id/selCview">
        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:id="@+id/selCBtn"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:clickable="false"
            android:textSize="25sp"
            android:textAlignment="center"
            android:id="@+id/selCTv"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:id="@+id/selLview">
        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:id="@+id/selLBtn"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:clickable="false"
            android:textSize="25sp"
            android:textAlignment="center"
            android:id="@+id/selLTv"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quesEx"
        android:textSize="15sp"
        android:layout_marginTop="15sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textSize="15sp"
        android:id="@+id/nextpage"
        android:layout_marginTop="10sp"
        android:layout_gravity="bottom"
        android:background="@drawable/btn"/>

</LinearLayout>